<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/toolbar_bg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <ZoomButton
        android:src="@drawable/toolbar_home"
        android:background="@drawable/toolbar_img_btn"
        android:id="@+id/btn_fast_access"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ZoomButton>
    <TextView
        android:layout_width="0.5px"
        android:background="#FF000000"
        android:layout_height="fill_parent"></TextView>
    <ZoomButton
        android:src="@drawable/toolbar_select"
        android:background="@drawable/toolbar_img_btn"
        android:id="@+id/btn_toolbar_select"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ZoomButton>
    <TextView
        android:layout_width="0.5px"
        android:background="#FF000000"
        android:layout_height="fill_parent"></TextView>
    <ZoomButton
        android:src="@drawable/toolbar_search"
        android:background="@drawable/toolbar_img_btn"
        android:id="@+id/btn_toolbar_search"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ZoomButton>
    <TextView
        android:layout_width="0.5px"
        android:background="#FF000000"
        android:layout_height="fill_parent"></TextView>
    <ZoomButton
        android:src="@drawable/toolbar_uplevel"
        android:background="@drawable/toolbar_img_btn"
        android:id="@+id/btn_toolbar_uplevel"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ZoomButton>
    <TextView
        android:layout_width="0.5px"
        android:background="#FF000000"
        android:layout_height="fill_parent"></TextView>
    <ZoomButton
        android:src="@drawable/toolbar_applications"
        android:background="@drawable/toolbar_img_btn"
        android:id="@+id/btn_toolbar_applications"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"></ZoomButton>
    <TextView
        android:layout_width="0.5px"
        android:background="#FF000000"
        android:layout_height="fill_parent" ></TextView>
    <ZoomButton
        android:src="@drawable/toolbar_mode_icon"
        android:background="@drawable/toolbar_img_btn"
        android:id="@+id/btn_toolbar_mode_icon"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ZoomButton>
</LinearLayout>
